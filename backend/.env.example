# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/uaol
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_CLUSTER_MODE=false

# Message Queue Configuration
MQ_TYPE=kafka
KAFKA_BROKERS=localhost:9092
SQS_REGION=us-east-1
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/account/uaol-jobs

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=uaol-storage

# Stripe Configuration
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# OAuth Configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# API Gateway Configuration
API_GATEWAY_PORT=3000
RATE_LIMIT_PER_MINUTE=100

# Service Ports
AUTH_SERVICE_PORT=3001
TOOL_REGISTRY_SERVICE_PORT=3002
JOB_ORCHESTRATION_SERVICE_PORT=3003
TOOL_PROXY_SERVICE_PORT=3004
BILLING_SERVICE_PORT=3005
STORAGE_SERVICE_PORT=3006

# Secrets Management
SECRETS_MANAGER_TYPE=aws-secrets-manager
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Environment
NODE_ENV=development

